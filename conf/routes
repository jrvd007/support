# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.mes

GET     /requetes/mes                           Application.mes
GET     /requetes/assignees                     Application.assignees
GET     /requetes/non_assignees                 Application.nonAssignees

POST    /requetes/nouvelle                      Application.creerRequete
GET     /requetes/nouvelle                      Application.nouvelleRequete

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
#*       /{controller}/{action}                  {controller}.{action}

# Import Secure routes
*       /                                       module:secure
