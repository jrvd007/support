# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /requetes/mes                           Application.mes
GET     /requetes/assignees                     Application.assignees
GET     /requetes/non_assignees                 Application.nonAssignees
GET     /                                       Application.mes
GET     /requetes/choose_view                   Application.chooseView
GET		/rapport								Application.rapport

GET		/requetes/finalisereq					Application.finalisereq
GET 	/requetes/abandonnereq					Application.abandonnereq
GET		/requetes/assignereq					Application.assignereq

POST    /requetes/nouvelle                      Application.creerRequete
GET     /requetes/nouvelle                      Application.nouvelleRequete

POST 	/requetes/newcategorie					Application.newcategorie
POST    /requetes/commentaire                   Application.commentaire
POST    /requetes/upload                        Application.upload

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public
GET     /uploads/                               staticDir:uploads

# Catch all
#*       /{controller}/{action}                  {controller}.{action}

# Import Secure routes
*       /                                       module:secure
